/*IMPORTS*/
@import '//web-toolkit.global.sky.com/2.3.6/stylesheets/toolkit.css'
@import 'bt-grid.css'
@import 'reset.css'

/*VARIABLES*/
original = #f05423
family = #2b93d1
variety = #7d9d33
movies = #b11d55
sports = #d92027
atlantic = #003663
font = skyTextRegular, helvetica, sans-serif

/*STYLES*/
body
	font-family font
	background-color atlantic
	cursor default
	user-select none
	
header
	color white
	width 100%
	height 90px
	h1
		font-size 3rem
		padding 15px 0 0 0.5%
		float left
	#datetime
		padding 15px 2% 0 0
		float right
		.time
			font-size 2.5rem
			float right
		.date
			font-size 0.8rem
			float right

.button
	margin 8px 0 0 1%
	float left
	cursor pointer
	font-size 3rem
	color white

#play-text
	color white
	font-size 3rem
	line-height 3rem
	
	
#play-text:hover
	cursor pointer
	color sports
		
.box
	width 100%
	height 360px
	float left
	box-sizing border-box
	border-bottom 5px solid white
	border-right 5px solid white
	
.main
	width 60%
	height 525px
	display block
	margin 50px 20%
	border 5px solid white
	border-bottom 5px solid white
	border-right 5px solid white
	p
		color white
		font-size 2rem
		line-height 3rem
		margin-top 160px
		text-align center

.overlay
	position absolute
	width 100%
	height 360px
	z-index 1
	left 0
	top 0
	
.layer2
	top 360px
	
.layer3
	top 720px
	
.left
	left 0
	
.right
	right 0
	
.overlay:hover
	cursor pointer
	
.col-lg-2, .col-lg-4, .col-lg-6, .col-lg-8
	padding 0
	
.no-border-bottom
	border-bottom 0
	
.no-border-right
	border-right 0
	
.border-top
	border-top 5px solid white
	height 365px
	
.border-left
	border-left 5px solid white
	
@media screen and (max-width 1400px)
	.box
		height 240px
		
	.main
		height 335px
		width 80%
		margin 25px 10%
		p
			margin-top 90px
			
	header
		h1
			font-size 2rem
		#datetime
			.time
				font-size 2rem
			.date
				font-size 0.6rem
				
	.button
		margin 6px 0 0 1%
		font-size 2.4rem
		
	.overlay
		height 240px
		
	.layer2
		top 240px
		
	#five-overlay
		top 480px
		
	#eight-overlay
		top 480px
		
	.border-top
		height 245px
		
@media screen and (max-width 800px)
	header
		position fixed
		top 0
		background-color atlantic
		opacity 0.8
		height 50px
		z-index 1
		border 2px solid white
		h1
			font-size 1.8rem
			padding 10px 0 0 0.5%
			float center
			text-align center
		#datetime
			display none
			
	.button
		display none
		
	.main
		display none
		
	.box 
		border 2px solid white
		
	.overlay
		display none
		
	#one
		margin-top 50px